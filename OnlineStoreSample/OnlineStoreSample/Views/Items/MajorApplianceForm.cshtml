@model OnlineStoreSample.Models.SpecificItemModels.MajorAppliance
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<h2>New Major Appliance</h2>

@using (Html.BeginForm("NewMajorAppliance", "Items"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Company)
        @Html.TextBoxFor(m => m.Company, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Company)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Model)
        @Html.TextBoxFor(m => m.Model, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Model)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Price)
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Price)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SKU)
        @Html.TextBoxFor(m => m.SKU, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SKU)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Warranty)
        @Html.TextBoxFor(m => m.Warranty, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Warranty)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MajorApplianceType)
        @Html.TextBoxFor(m => m.MajorApplianceType, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MajorApplianceType)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MajorApplianceSize)
        @Html.TextBoxFor(m => m.MajorApplianceSize, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MajorApplianceSize)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ElectronicSpecifications)
        @Html.TextAreaFor(m => m.ElectronicSpecifications, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ElectronicSpecifications)
    </div>

    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

