@model OnlineStoreSample.Models.SpecificItemModels.Laptop
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<h2>New Laptop</h2>

@using (Html.BeginForm("NewLaptop", "Items"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Company)
        @Html.TextBoxFor(m => m.Company, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Company)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Model)
        @Html.TextBoxFor(m => m.Model, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Model)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Price)
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Price)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SKU)
        @Html.TextBoxFor(m => m.SKU, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SKU)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Warranty)
        @Html.TextBoxFor(m => m.Warranty, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Warranty)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LaptopOperatingSystem)
        @Html.TextBoxFor(m => m.LaptopOperatingSystem, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.LaptopOperatingSystem)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LaptopProcessor)
        @Html.TextBoxFor(m => m.LaptopProcessor, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.LaptopProcessor)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LaptopRAM)
        @Html.TextBoxFor(m => m.LaptopRAM, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.LaptopRAM)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LaptopScreenSize)
        @Html.TextBoxFor(m => m.LaptopScreenSize, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.LaptopScreenSize)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LaptopStorageSize)
        @Html.TextBoxFor(m => m.LaptopStorageSize, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.LaptopStorageSize)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LaptopStorageType)
        @Html.TextBoxFor(m => m.LaptopStorageType, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.LaptopStorageType)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ElectronicSpecifications)
        @Html.TextAreaFor(m => m.ElectronicSpecifications, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ElectronicSpecifications)
    </div>

    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}