@model OnlineStoreSample.Models.SpecificItemModels.Software
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<h2>New Software</h2>

@using (Html.BeginForm("NewSoftware", "Items"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Company)
        @Html.TextBoxFor(m => m.Company, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Company)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Model)
        @Html.TextBoxFor(m => m.Model, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Model)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Price)
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Price)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SKU)
        @Html.TextBoxFor(m => m.SKU, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SKU)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Warranty)
        @Html.TextBoxFor(m => m.Warranty, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Warranty)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MediaDiscOrDownLoad)
        @Html.TextBoxFor(m => m.MediaDiscOrDownLoad, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MediaDiscOrDownLoad)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MeidaDeviceType)
        @Html.TextBoxFor(m => m.MeidaDeviceType, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MeidaDeviceType)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SoftwareOperatingSystems)
        @Html.TextBoxFor(m => m.SoftwareOperatingSystems, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SoftwareOperatingSystems)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SoftwareSize)
        @Html.TextBoxFor(m => m.SoftwareSize, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SoftwareSize)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MediaDeviceSpecifications)
        @Html.TextAreaFor(m => m.MediaDeviceSpecifications, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MediaDeviceSpecifications)
    </div> 

    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}