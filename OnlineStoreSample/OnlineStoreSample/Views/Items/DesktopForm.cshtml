@model OnlineStoreSample.Models.SpecificItemModels.Desktop
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Desktop</h2>

@using (Html.BeginForm("NewDesktop", "Items"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Company)
        @Html.TextBoxFor(m => m.Company, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Company)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Model)
        @Html.TextBoxFor(m => m.Model, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Model)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Price)
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Price)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SKU)
        @Html.TextBoxFor(m => m.SKU, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SKU)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Warranty)
        @Html.TextBoxFor(m => m.Warranty, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Warranty)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DesktopOperatingSystem)
        @Html.TextBoxFor(m => m.DesktopOperatingSystem, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DesktopOperatingSystem)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DesktopProcessor)
        @Html.TextBoxFor(m => m.DesktopProcessor, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DesktopProcessor)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DesktopRAM)
        @Html.TextBoxFor(m => m.DesktopRAM, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DesktopRAM)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DesktopStorageSize)
        @Html.TextBoxFor(m => m.DesktopStorageSize, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DesktopStorageSize)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DesktopStorageType)
        @Html.TextBoxFor(m => m.DesktopStorageType, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DesktopStorageType)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ElectronicSpecifications)
        @Html.TextAreaFor(m => m.ElectronicSpecifications, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ElectronicSpecifications)
    </div>

    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}