@model OnlineStoreSample.Models.SpecificItemModels.CarryingBag
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Carrying Bag</h2>

@using (Html.BeginForm("Save", "CarryingBags"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Company)
        @Html.TextBoxFor(m => m.Company, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Company)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Model)
        @Html.TextBoxFor(m => m.Model, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Model)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Price)
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Price)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SKU)
        @Html.TextBoxFor(m => m.SKU, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SKU)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Warranty)
        @Html.TextBoxFor(m => m.Warranty, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Warranty)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AccessoryDescription)
        @Html.TextBoxFor(m => m.AccessoryDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.AccessoryDescription)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BagColor)
        @Html.TextBoxFor(m => m.BagColor, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.BagColor)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BagSize)
        @Html.TextBoxFor(m => m.BagSize, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.BagSize)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BagType)
        @Html.TextBoxFor(m => m.BagType, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.BagType)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AccessoryDescription)
        @Html.TextAreaFor(m => m.AccessoryDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.AccessoryDescription)
    </div>

    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}